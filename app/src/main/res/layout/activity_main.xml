<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Vivan&apos;s Restaurant"
        android:id="@+id/title"
        android:textColor="#006400"
        android:gravity="center"
        android:textSize="29sp"
        android:padding="18dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:id="@+id/menubtn"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#0000ff"
        android:onClick="menulist"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:id="@+id/contactBtn"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:textColor="#00cd00"
        android:layout_marginBottom="20dp"
        android:onClick="gotoContactUs"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website"
        android:id="@+id/websiteBtn"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:textColor="#ff0000"
        android:onClick="gotoWebsite"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferences"
            android:id="@+id/PreferencesBtn"
            android:onClick="gotoPrefs"
            android:layout_gravity="center_vertical" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallery"
            android:id="@+id/gallerybtn"
            android:onClick="gotoGallery"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>
